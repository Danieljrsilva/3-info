import javax.swing.JOptionPane;

public class Custos {
	private float totpercurso,totcomb,consumo,total,totpedag;
	public Custos() {
		this(0f,0f,0f,0f,0f);
	}
	public Custos(float totpercurso, float totcomb, float total, float totpedag) {
		this.totpercurso = totpercurso;
		this.totcomb = totcomb;
		this.total = total;
		this.totpedag = totpedag;
	}
	public float getTotpercurso() {
		return this.totpercurso;
	}
	public void setTotpercurso(float totpercurso) {
		this.totpercurso = totpercurso;
	}
	public float getTotcomb() {
		return this.totcomb;
	}
	public void setTotcomb(float totcomb) {
		this.totcomb = totcomb;
	}
	public float getTotal() {
		return this.total;
	}
	public void setTotal(float total) {
		this.total = total;
	}
	public int getTotpedag() {
		return this.totpedag;
	}
	public void setTotpedag(int totpedag) {
		this.totpedag = totpedag;
	}
	public float getConsumo() {
		return this.consumo;
	}
	public void setConsumo(float consumo) {
		this.consumo = consumo;
	}
	public void calcular(Percurso cust) {
		this.setTotal(getTotpercurso () + getTotcomb () + getTotpedag () + getConsumo ());
		JOptionPane.showMessageDialog(null,
				"\ntotal: " + this.getTotal());
		
	}
		
}
