package aluno;

import javax.swing.JOptionPane;

public class Usando_recursos {

	public static void main(String[] args) {
	   int op,n1,tot;
	   	   
		do {//3
			op = Integer.parseInt(JOptionPane.showInputDialog(null, "1- soma\n2- subtração"
																+ "\n3- Divizão\n0-sair", "Selecione: ", 1));
			switch(op) {//4
			case 1:
				n1 = Integer.parseInt(JOptionPane.showInputDialog(null,"Digite um número para somar: "));
				tot = n1+n1;
				JOptionPane.showMessageDialog(null,"Total da soma é: "+ tot);
				break;
			case 2:
				n1 = Integer.parseInt(JOptionPane.showInputDialog(null,"Digite um número para subtrair: "));
				tot = n1-n1;
				JOptionPane.showMessageDialog(null,"Total da subtração é: "+ tot);
				break;
			case 3:	
				n1 = Integer.parseInt(JOptionPane.showInputDialog(null,"Digite um número para fazer a divizão: "));
				tot = n1/n1;
				JOptionPane.showMessageDialog(null,"Total da divizão é: "+ tot);
				break;
			default:
				
				break;
			}
		}while(op!=0);
	}

}
