package array_;
import javax.swing.JOptionPane;

public class Array {//1

	public static void main(String[] args) {//2
		int qt,soma = 0;
		float med;
		qt = Integer.parseInt(JOptionPane.showInputDialog(null, "Digite a qtde de alunos: "));
		
		String nome[] = new String[qt];
		int idade[] = new int[qt];
		String mostrar = "";
		int i;
		for (i = 0; i < qt; i++) {//3
			nome[i] = JOptionPane.showInputDialog(null, "Digite o nome");
		    idade[i] = Integer.parseInt(JOptionPane.showInputDialog("Digite a idade"));
			mostrar += "\naluno: " + (i+1) + ": " + nome[i] + ", idade: " + idade[i];
			
			
		}//3
	    soma = (i + i)/2;
		JOptionPane.showMessageDialog(null, mostrar , "lista de alunos ", i+i);
		
	}//2	

}//1
